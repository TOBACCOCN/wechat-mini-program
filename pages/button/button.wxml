<!--pages/button/button.wxml-->
<button>默认按钮</button>
<button size="mini">小按钮</button>
<button type="warn">红色按钮</button>
<button type="primary">绿色按钮</button>
<button type="primary" plain="true">镂空按钮</button>
<button type="primary" loading>loading 按钮</button>
<!-- open-type: contact 联系客服 -->
<button open-type="contact">联系客服</button>
<!-- open-type: share 分享 -->
<button open-type="share">分享</button>
<!-- open-type: getUserInfo 获取用户信息 -->
<button open-type="getUserInfo" bindgetuserinfo="getUserInfo">获取用户信息</button>
<!-- open-type: openSetting 打开授权页面 -->
<button open-type="openSetting">打开授权页面</button>
<!-- open-type: feedback 反馈，只能真机调试 -->
<button open-type="feedback">反馈</button>
